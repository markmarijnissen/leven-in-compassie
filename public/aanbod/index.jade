mixin later 
  span(title="Zodra er 6 aanmeldingen zijn plannen we samen een datum.").abbr Bij minimaal 6 aanmeldingen prikken we een datum.

mixin link(href)
  if false && !embed
    tr
      td(colspan="2").text-center
        a.btn.btn-xs.btn-primary(href="/aanbod/#{href}",style="margin-bottom: 10px;") Lees meer

mixin header(href,title)
  h4.red.text-center.aanbod-header: a(href="/aanbod/#{href}") #{title}

mixin title(title)
  if !embed
    h4(style="border: 1px solid black; border-style: none none solid;") #{title}
  else
    h4 #{title.toUpperCase()}

