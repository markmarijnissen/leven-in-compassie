        .row
            .col-sm-6
                .form-group
                    label Voor- en achternaam:
                    .input-group
                        input.form-control.input-sm(type="text",name="name")
                        span.input-group-addon
                            i.glyphicon.glyphicon-ok.valid(style="display: none;")
                            i.glyphicon.glyphicon-remove.invalid(style="display: none;")
                .form-group
                    label E-Mail:
                    .input-group
                        input.form-control.input-sm(type="email",name="email")
                        span.input-group-addon
                            i.glyphicon.glyphicon-ok.valid(style="display: none;")
                            i.glyphicon.glyphicon-remove.invalid(style="display: none;")
                .form-group
                    label Telefoon:
                    .input-group
                        input.form-control.input-sm(type="text",name="telephone")
                        span.input-group-addon
                            i.glyphicon.glyphicon-ok.valid(style="display: none;")
                            i.glyphicon.glyphicon-remove.invalid(style="display: none;")
                .form-group
                    label Straat en huisnummer:
                    .input-group
                        input.form-control.input-sm(type="text",name="address")
                        span.input-group-addon
                            i.glyphicon.glyphicon-ok.valid(style="display: none;")
                            i.glyphicon.glyphicon-remove.invalid(style="display: none;")

                .form-group
                    label Postcode:
                    .input-group
                        input.form-control.input-sm(type="text",name="zipcode")
                        span.input-group-addon
                            i.glyphicon.glyphicon-ok.valid(style="display: none;")
                            i.glyphicon.glyphicon-remove.invalid(style="display: none;")

                .form-group
                    label Plaats:
                    .input-group
                        input.form-control.input-sm(type="text",name="city")
                        span.input-group-addon
                            i.glyphicon.glyphicon-ok.valid(style="display: none;")
                            i.glyphicon.glyphicon-remove.invalid(style="display: none;")

            .col-sm-6
                .form-group
                    label Opmerkingen:
                    textarea(name="comment",rows="4").form-control.input-sm

                .form-group
                    label Kosten:
                
                    table.table.table-condensed.table-bordered(style="margin-bottom: 0;")
                        tr
                            td Prijs per persoon:&nbsp;
                            td &euro; 
                                span.amount ...
                                span.text-muted.discount-show(style="display: none;")  - prijs met korting
                        tr 
                            td Aantal:
                            td 
                                  select(name="quantity").form-control.input-sm
                                    option(value="1") 1 persoon
                                    each i in ['2','3','4','5','6','7','8','9','10']
                                        option(value="#{i}") #{i} personen
                        tr 
                            td: strong Totaal:
                            td: strong &euro; 
                                span.total-amount

                    .alert.alert-warning.discount-show(style="display: none;") Prijs is inclusief &euro;<span class="discount">...</span> per persoon korting.
