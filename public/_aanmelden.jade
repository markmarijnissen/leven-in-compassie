style.
    .input-group-addon {
        border-style: none;
        background-color: transparent;
    }
    .glyphicon-ok {
        color: green;
    }
    .glyphicon-remove {
        color: red;
    }
    .submit[disabled], .submit[disabled]:hover {
        background-color: #7D7D7D;
        border-color: #7D7D7D;
        cursor: not-allowed;
    }
    .loading {
        padding-top: 100px;
        min-height: 600px;
