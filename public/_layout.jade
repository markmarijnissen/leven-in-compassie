    if revealjs
      script(src="/reveal-bundle.js")
  body(class="#{ revealjs? '':'noreveal'}")#wrapper
    #navbar
      != partial('_partials/navbar')
    if headerimg
      //-.headerimg
      .headerimg(style="background-image: url(\"/assets/#{headerimg}\");")
        //-img(src="/assets/#{headerimg}")
        .overlay
        if !hide_title
          h1.title!= title  
    if revealjs
      .reveal
        .slides
          != yield
    else if format === 'nothing'
      != yield
    else  
      #layout.container
        if format === 'container'
          != yield
        else if format === 'row'
          .row
            != yield
        else 
          .col-md-6.col-md-offset-3.col-xs-12.col-sm-10.col-sm-offset-1
            if !hide_title && !headerimg
              h1.title!= title
            != yield

