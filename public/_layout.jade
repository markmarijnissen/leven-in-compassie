doctype html
html
  head
    meta(charset='utf-8')     
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    if title !== 'Leven in Compassie'     
      title #{title} - Leven in Compassie 
    else
      title Leven in Compassie  

    meta(name="author" content="Mark Marijnissen")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    meta(name='viewport', content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui") 
    script(src="https://cdn.firebase.com/js/client/2.2.7/firebase.js")
    script(type='text/javascript', src='/main-bundle.js')      
    if revealjs
      script(src="/reveal-bundle.js")
  body(class="#{ revealjs? '':'noreveal'}")#wrapper
    #navbar
      != partial('_partials/navbar')
    if headerimg
      //-.headerimg
      .headerimg(style="background-image: url(\"/assets/#{headerimg}\");")
        //-img(src="/assets/#{headerimg}")
        .overlay
        if !hide_title
          h1.title!= title  
    if revealjs
      .reveal
        .slides
          != yield
    else  
      #layout.container
        if format === 'container'
          != yield
        else if format === 'row'
          .row
            != yield
        else 
          .col-md-6.col-md-offset-3.col-xs-12.col-sm-10.col-sm-offset-1
            if !hide_title && !headerimg
              h1.title!= title
            != yield
        
